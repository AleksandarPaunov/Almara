@model Almara.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table id="customers" class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th> Customer </th>
            <th> IS Subscribed To Newsletter</th>
            <th>Delete</th>
        </tr>


    </thead>

    <tbody>



    </tbody>

</table>
<h3></h3>
<button type="submit" class="btn btn-primary"
        onclick="window.location.href = '@Url.Action("New", "Customer")';">
    Add Customer
</button>

@section scripts
{
    
    <script>

            $(document).ready(function () {
                var table = $("#customers").DataTable({
                ajax: {
                            url: "/api/customers",
                            dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function (data, type, customer) {

                                return "<a href='/customer/edit/" + customer.id + "'>" + customer.name + "</a>";
                            }
                        },
                        {
                            data: "membershipType.name"
                        },
                        {
                            data: "id",
                            render: function(data) {

                                return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });
                $("#customers").on("click", ".js-delete", function () {

                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this customer?", function (result) {

                        if (result) {
                $.ajax({
                        url: "/api/customers/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {
                        table.row(button.parents("tr")).remove().draw();
                    }
                });
                        }
                    });
                });
            });
    </script>
   
}
