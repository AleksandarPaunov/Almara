
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>
        Genre: @Model.Genre.Name
    </li>
    <li>Date Added: @Model.DateAdded.ToString().Substring(0, 9)</li>
    <li>Release Date: @Model.ReleaseDate.ToString().Substring(0, 9)</li>
    <li>Numbers in stock: @Model.NumberInStock</li>
  
    
</ul>

